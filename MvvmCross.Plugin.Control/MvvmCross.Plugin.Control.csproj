    <PackageLicenseExpression>MS-PL</PackageLicenseExpression>
    <Copyright>Marcin Bochenek</Copyright>
    <PackageProjectUrl>https://github.com/MarcinBochenek/MvvmCross.Plugin.Control</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MarcinBochenek/MvvmCross.Plugin.Control</RepositoryUrl>
    <PackageId>MBo.MvvmCross.Plugin.Control</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MvvmCross" Version="8.0.2" />
  </ItemGroup>

</Project>
